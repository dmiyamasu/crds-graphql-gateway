{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "gateway",
      "program": "${workspaceFolder}/dist/index.js",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "runtimeExecutable": "nodemon",
      "restart": true,
      "preLaunchTask": "build gateway"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "content graph",
      "program": "${workspaceFolder}/graphs/crds-graphql-content/dist/index.js",
      "runtimeExecutable": "nodemon",
      "outFiles": [
        "${workspaceFolder}/graphs/crds-graphql-content/**/*.js"
      ],
      "restart": true,
      "preLaunchTask": "build content"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "user-profile graph",
      "program": "${workspaceFolder}/graphs/crds-graphql-user-profile/dist/index.js",
      "runtimeExecutable": "nodemon",
      "outFiles": [
        "${workspaceFolder}/graphs/crds-graphql-user-profile/dist/**/*.js"
      ],
      "restart": true,
      "preLaunchTask": "build user-profile"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "groups graph",
      "program": "${workspaceFolder}/graphs/crds-graphql-groups/dist/index.js",
      "runtimeExecutable": "nodemon",
      "outFiles": [
        "${workspaceFolder}/graphs/crds-graphql-groups/**/*.js"
      ],
      "restart": true,
      "preLaunchTask": "build groups"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "personalization graph",
      "program": "${workspaceFolder}/graphs/crds-graphql-personalization/dist/index.js",
      "runtimeExecutable": "nodemon",
      "outFiles": [
        "${workspaceFolder}/graphs/crds-graphql-personalization/**/*.js"
      ],
      "restart": true,
      "preLaunchTask": "build personalization"
    },
  ],
  "compounds": [
    {
      "name": "federation",
      "configurations": ["content graph","user-profile graph", "groups graph", "personalization graph", "gateway"],
    }
  ]
}
